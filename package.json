{
  "name": "chalkdust",
  "version": "2.1.12",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "dev:function": "nodemon --inspect=0.0.0.0 --watch function/index.js node_modules/@google-cloud/functions-framework --target=sendgrid",
    "build": "vite build",
    "format": "prettier --write src --ignore-path ./.gitignore",
    "lint": "NODE_ENV=development eslint --ext .jsx src",
    "serve": "vite preview"
  },
  "dependencies": {
    "@arcgis/core": "^4.29.10",
    "@sendgrid/client": "^8.1.3",
    "firebase": "^9.23.0",
    "proj4": "^2.11.0",
    "query-string": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "reactfire": "^4.2.3",
    "vite-plugin-package-version": "^1.1.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.24.1",
    "@google-cloud/functions-framework": "^3.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^13.6.1",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.14",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.7",
    "vite-plugin-eslint": "^1.8.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "prettier",
      "import",
      "jsx-a11y",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
