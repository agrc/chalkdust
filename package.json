{
  "name": "chalkdust",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "dev:function": "nodemon --inspect=0.0.0.0 --watch function/index.js node_modules/@google-cloud/functions-framework --target=sendgrid",
    "build": "vite build",
    "format": "prettier --write src --ignore-path ./.gitignore",
    "lint": "NODE_ENV=development eslint --ext .jsx src",
    "serve": "vite preview",
    "release": "standard-version"
  },
  "dependencies": {
    "@agrc/layer-selector": "^4.0.5",
    "@arcgis/core": "^4.23.4",
    "@sendgrid/client": "^7.6.2",
    "proj4": "^2.8.0",
    "query-string": "^7.1.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-error-boundary": "^3.1.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "@google-cloud/functions-framework": "^3.0.0",
    "@nabla/vite-plugin-eslint": "^1.4.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "http-server": "^14.1.0",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "standard-version": "^9.3.2",
    "tailwindcss": "^3.0.23",
    "vite": "^2.9.0",
    "vite-react-jsx": "^1.1.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
