{
  "name": "chalkdust",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "dev:function": "nodemon --inspect=0.0.0.0 --watch function/index.js node_modules/@google-cloud/functions-framework --target=sendgrid",
    "build": "vite build",
    "format": "prettier --write src --ignore-path ./.gitignore",
    "lint": "NODE_ENV=development eslint --ext .jsx src",
    "serve": "vite preview",
    "release": "standard-version"
  },
  "dependencies": {
    "@agrc/layer-selector": "^4.0.5",
    "@arcgis/core": "^4.25.1",
    "@sendgrid/client": "^7.7.0",
    "proj4": "^2.8.0",
    "query-string": "^7.1.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-error-boundary": "^3.1.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@google-cloud/functions-framework": "^3.1.2",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.1",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.2.4",
    "vite": "^3.2.3",
    "vite-plugin-eslint": "^1.8.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
