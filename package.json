{
  "name": "chalkdust",
  "version": "2.1.20",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "dev:function": "nodemon --inspect=0.0.0.0 --watch function/index.js node_modules/@google-cloud/functions-framework --target=sendgrid",
    "build": "vite build",
    "format": "prettier --write src --ignore-path ./.gitignore",
    "lint": "NODE_ENV=development eslint --ext .jsx src",
    "serve": "vite preview"
  },
  "dependencies": {
    "@arcgis/core": "^4.31.6",
    "@sendgrid/client": "^8.1.4",
    "firebase": "^11.2.0",
    "proj4": "^2.15.0",
    "query-string": "^9.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^5.0.0",
    "vite-plugin-package-version": "^1.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@google-cloud/functions-framework": "^3.4.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "firebase-tools": "^13.29.3",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.8",
    "tailwindcss": "^4.0.3",
    "vite": "^6.0.11",
    "vite-plugin-eslint": "^1.8.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "prettier",
      "import",
      "jsx-a11y",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
